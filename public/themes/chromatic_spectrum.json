{
  "id": "chromatic",
  "name": "Chromatic Spectrum",
  "description": "Color theory exploration",
  "emoji": "\ud83c\udfaf",
  "variables": {
    "--bg-primary": "#000000",
    "--bg-secondary": "#1a1a1a",
    "--bg-tertiary": "#2a2a2a",
    "--text-primary": "#ffffff",
    "--text-secondary": "#f0f0f0",
    "--text-tertiary": "#e0e0e0",
    "--accent-primary": "#ff0000",
    "--accent-secondary": "#00ff00",
    "--accent-tertiary": "#0000ff",
    "--border-primary": "#ffffff",
    "--border-secondary": "#808080",
    "--shadow-primary": "rgba(255, 255, 255, 0.5)",
    "--shadow-secondary": "rgba(128, 128, 128, 0.3)",
    "--gradient-1": "#ff0000",
    "--gradient-2": "#00ff00",
    "--gradient-3": "#0000ff",
    "--overlay": "rgba(0, 0, 0, 0.7)",
    "--hover-transform": "translateY(-5px) rotate(180deg)",
    "--transition-speed": "0.8s",
    "--animation-name": "rainbow-shift",
    "--font-primary": "'Bungee', cursive",
    "--font-secondary": "'Rubik', sans-serif"
  },
  "animations": {
    "background": "rainbow-shift",
    "hover": "rainbow-shift",
    "accent": "gradient-shift"
  },
  "effects": {
    "particles": true,
    "glitch": true,
    "scanlines": false,
    "spectrum": true,
    "prism": true
  },
  "fonts": {
    "primary": "Righteous",
    "secondary": "Kdam Thmor Pro",
    "import": "@import url('https://fonts.googleapis.com/css2?family=Righteous+Kdam+Thmor+Pro:wght@400;700&display=swap');"
  }
}