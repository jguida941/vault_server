{
  "id": "arctic",
  "name": "Arctic Aurora",
  "description": "Northern lights over frozen tundra",
  "emoji": "\ud83c\udfbf",
  "variables": {
    "--bg-primary": "#e6f3ff",
    "--bg-secondary": "#cce7ff",
    "--bg-tertiary": "#b3daff",
    "--text-primary": "#004080",
    "--text-secondary": "#0066cc",
    "--text-tertiary": "#4682b4",
    "--accent-primary": "#7fff00",
    "--accent-secondary": "#4dd0e1",
    "--accent-tertiary": "#00bcd4",
    "--border-primary": "#4dd0e1",
    "--border-secondary": "#b3daff",
    "--shadow-primary": "rgba(77, 208, 225, 0.3)",
    "--shadow-secondary": "rgba(127, 255, 0, 0.2)",
    "--gradient-1": "#7fff00",
    "--gradient-2": "#4dd0e1",
    "--gradient-3": "#b3daff",
    "--overlay": "rgba(230, 243, 255, 0.9)",
    "--hover-transform": "translateY(-4px) scale(1.02)",
    "--transition-speed": "0.4s",
    "--animation-name": "aurora-dance",
    "--font-primary": "'Raleway', sans-serif",
    "--font-secondary": "'Montserrat', sans-serif"
  },
  "animations": {
    "background": "aurora-dance",
    "hover": "aurora-dance",
    "accent": "gradient-shift"
  },
  "effects": {
    "particles": true,
    "glitch": false,
    "scanlines": false,
    "snow": true,
    "aurora": true
  },
  "fonts": {
    "primary": "Raleway",
    "secondary": "Quicksand",
    "import": "@import url('https://fonts.googleapis.com/css2?family=Raleway+Quicksand:wght@400;700&display=swap');"
  }
}