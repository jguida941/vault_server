{
  "id": "tokyo",
  "name": "Tokyo Neon Night",
  "description": "Shibuya crossing at midnight",
  "emoji": "\ud83d\uddfc",
  "variables": {
    "--bg-primary": "#000000",
    "--bg-secondary": "#0a0a0a",
    "--bg-tertiary": "#1a1a1a",
    "--text-primary": "#ff0099",
    "--text-secondary": "#ffff00",
    "--text-tertiary": "#00ffff",
    "--accent-primary": "#ff0099",
    "--accent-secondary": "#00ffff",
    "--accent-tertiary": "#ffff00",
    "--border-primary": "#ff0099",
    "--border-secondary": "#00ffff",
    "--shadow-primary": "rgba(255, 0, 153, 0.6)",
    "--shadow-secondary": "rgba(0, 255, 255, 0.4)",
    "--gradient-1": "#ff0099",
    "--gradient-2": "#ffff00",
    "--gradient-3": "#00ffff",
    "--overlay": "rgba(0, 0, 0, 0.85)",
    "--hover-transform": "translateY(-5px) skew(-2deg)",
    "--transition-speed": "0.2s",
    "--animation-name": "neon-flicker",
    "--font-primary": "'Noto Sans JP', sans-serif",
    "--font-secondary": "'M PLUS 1p', sans-serif"
  },
  "animations": {
    "background": "neon-flicker",
    "hover": "neon-flicker",
    "accent": "gradient-shift"
  },
  "effects": {
    "particles": false,
    "glitch": true,
    "scanlines": false,
    "neonFlicker": true
  },
  "fonts": {
    "primary": "Noto Sans JP",
    "secondary": "M PLUS Rounded 1c",
    "import": "@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP+M+PLUS+Rounded+1c:wght@400;700&display=swap');"
  }
}