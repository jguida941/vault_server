{
  "id": "bauhaus",
  "name": "Bauhaus Primary",
  "description": "Bauhaus school design principles",
  "emoji": "\ud83d\udfe5",
  "variables": {
    "--bg-primary": "#ffffff",
    "--bg-secondary": "#f5f5f5",
    "--bg-tertiary": "#e0e0e0",
    "--text-primary": "#000000",
    "--text-secondary": "#cc0000",
    "--text-tertiary": "#0033cc",
    "--accent-primary": "#cc0000",
    "--accent-secondary": "#ffcc00",
    "--accent-tertiary": "#0033cc",
    "--border-primary": "#000000",
    "--border-secondary": "#808080",
    "--shadow-primary": "rgba(0, 0, 0, 0.3)",
    "--shadow-secondary": "rgba(255, 0, 0, 0.2)",
    "--gradient-1": "#ff0000",
    "--gradient-2": "#ffff00",
    "--gradient-3": "#0000ff",
    "--overlay": "rgba(255, 255, 255, 0.9)",
    "--hover-transform": "translateY(-4px) rotate(90deg)",
    "--transition-speed": "0.3s",
    "--animation-name": "bauhaus-construct",
    "--font-primary": "'Bebas Neue', cursive",
    "--font-secondary": "'Roboto', sans-serif"
  },
  "animations": {
    "background": "bauhaus-construct",
    "hover": "bauhaus-construct",
    "accent": "gradient-shift"
  },
  "effects": {
    "particles": false,
    "glitch": false,
    "scanlines": false,
    "geometric": true,
    "primary": true
  },
  "fonts": {
    "primary": "DM Sans",
    "secondary": "Red Hat Display",
    "import": "@import url('https://fonts.googleapis.com/css2?family=DM+Sans+Red+Hat+Display:wght@400;700&display=swap');"
  }
}